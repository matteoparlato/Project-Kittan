<Window
    x:Class="Project_Kittan.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Project_Kittan.Helpers"
    xmlns:local="clr-namespace:Project_Kittan"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Project_Kittan.ViewModels"
    Title="Project Kittan"
    Width="800"
    Height="544"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodel:Workspace x:Name="ViewModel" />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="TrueToVisibleConverter" />
        <helpers:ArrayMultiValueConverter x:Key="CommandParametersConverter" />
        <helpers:StringToBooleanConverter x:Key="StringToVisibleConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8" AllowDrop="True" Drop="StackPanel_Drop">
                <TextBlock Text="Select the folder containing all the text files of the objects exported from NAV IDE." TextWrapping="Wrap" />
                <StackPanel Margin="0,8,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button HorizontalAlignment="Left" Command="{Binding BrowseWorkspaceFolder}" Content="Browse folder" />
                    <TextBlock Margin="8,2,0,0" Opacity="0.6" Text="or" />
                    <Button Margin="8,0,0,0" HorizontalAlignment="Left" Command="{Binding AddFilesFromExecutableFolder}" Content="Use current folder" />
                    <TextBlock Margin="8,2,0,0" Opacity="0.6" Text="or" />
                    <TextBlock Margin="8,2,0,0" Text="Drag and drop files" />
                </StackPanel>
                <TextBlock Margin="0,8,0,0" FontStyle="Italic" Text="{Binding Path}" TextWrapping="Wrap" />

                <Grid>
                    <TextBlock Margin="0,8,0,0" HorizontalAlignment="Left" Text="Found files" TextWrapping="Wrap" />
                    <TextBlock Margin="0,8,0,0" HorizontalAlignment="Right" TextWrapping="Wrap">
                        <Hyperlink Command="{Binding ClearWorkspace}">
                            Clear list
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <ListView Height="120" ItemsSource="{Binding WorkspaceFiles}" SelectedItem="{Binding SelectedWorkspaceFile, Mode=TwoWay}">
                    <ListView.ContextMenu>
                        <ContextMenu Visibility="{Binding Ready, Converter={StaticResource TrueToVisibleConverter}}">
                            <MenuItem Command="{Binding OpenFile}" Header="Open file" />
                            <MenuItem Command="{Binding OpenFileLocation}" Header="Open file location" />
                            <MenuItem Command="{Binding RemoveFile}" Header="Remove file" />
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}">
                                <TextBlock.InputBindings>
                                    <MouseBinding Command="{Binding OpenFile}" MouseAction="LeftDoubleClick" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Expander Margin="0,18,0,0" Header="Tag adder" IsEnabled="{Binding Ready}" IsExpanded="False">
                    <StackPanel Margin="10">
                        <TextBlock Text="Select the version of NAV where you'll import processed files." TextWrapping="Wrap" />
                        <ComboBox x:Name="NAVVersionComboBox" Margin="0,4,0,0" SelectedIndex="1">
                            <ComboBoxItem Content="NAV 2009 R2 and below (max. 80 chars for version list field)" />
                            <ComboBoxItem Content="NAV 2013 and above (max. 250 chars for version list field)" />
                        </ComboBox>

                        <TextBlock Margin="0,8,0,0" TextWrapping="Wrap">
                            <Run>Write the tag you want to add to version list</Run>
                            <Run Background="LightYellow">(if empty updates only date and time (if enabled) and checks version list length based on selected NAV version)</Run>
                            <Run>.</Run>
                        </TextBlock>
                        <TextBox x:Name="VersionTextTextBox" Margin="0,4,0,0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding AddTag}">
                                    <KeyBinding.CommandParameter>
                                        <MultiBinding Converter="{StaticResource CommandParametersConverter}">
                                            <Binding ElementName="NAVVersionComboBox" Path="SelectedIndex" />
                                            <Binding ElementName="VersionTextTextBox" Path="Text" />
                                            <Binding ElementName="DateTimeUpdateCheckBox" Path="IsChecked" />
                                        </MultiBinding>
                                    </KeyBinding.CommandParameter>
                                </KeyBinding>
                            </TextBox.InputBindings>
                        </TextBox>

                        <TextBlock Margin="0,8,0,0" Text="Select the date format you want to use." TextWrapping="Wrap" Visibility="Collapsed" />

                        <CheckBox x:Name="CaseSensitiveInsertCheckBox" Margin="0,8,0,0" Content="Ignore case " IsChecked="True" />

                        <CheckBox x:Name="DateTimeUpdateCheckBox" Margin="0,8,0,0" Content="Update date and time" IsChecked="True" />

                        <Button Width="100" Margin="0,18,0,0" HorizontalAlignment="Left" Command="{Binding AddTag}" Content="Add tag">
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource CommandParametersConverter}">
                                    <Binding ElementName="NAVVersionComboBox" Path="SelectedIndex" />
                                    <Binding ElementName="VersionTextTextBox" Path="Text" />
                                    <Binding ElementName="CaseSensitiveInsertCheckBox" Path="IsChecked" />
                                    <Binding ElementName="DateTimeUpdateCheckBox" Path="IsChecked" />
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>
                </Expander>

                <Expander Margin="0,8,0,0" Header="Tag remover" IsEnabled="{Binding Ready}" IsExpanded="False">
                    <StackPanel Margin="10">
                        <TextBlock Text="Write the tag you want to remove from the version list." TextWrapping="Wrap" />
                        <TextBox x:Name="TagTextTextBox" Margin="0,4,0,0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding RemoveTag}">
                                    <KeyBinding.CommandParameter>
                                        <MultiBinding Converter="{StaticResource CommandParametersConverter}">
                                            <Binding ElementName="CaseSensitiveInsertCheckBox" Path="IsChecked" />
                                            <Binding ElementName="TagTextTextBox" Path="Text" />
                                        </MultiBinding>
                                    </KeyBinding.CommandParameter>
                                </KeyBinding>
                            </TextBox.InputBindings>
                        </TextBox>

                        <TextBlock Margin="0,8,0,0" Text="Select the date format you want to use." TextWrapping="Wrap" Visibility="Collapsed" />

                        <CheckBox x:Name="CaseSensitiveRemoveCheckBox" Margin="0,8,0,0" Content="Ignore case " IsChecked="True" />

                        <Button Width="100" Margin="0,18,0,0" HorizontalAlignment="Left" Command="{Binding RemoveTag}" Content="Remove tag">
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource CommandParametersConverter}">
                                    <Binding ElementName="CaseSensitiveRemoveCheckBox" Path="IsChecked" />
                                    <Binding ElementName="TagTextTextBox" Path="Text" />
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>
                </Expander>

                <Expander Margin="0,8,0,0" Header="Occurrences finder" IsEnabled="{Binding Ready}" IsExpanded="False">
                    <StackPanel Margin="10">
                        <TextBlock Text="Write the text you want to search in objects to find in which ones there is such text." TextWrapping="Wrap" />
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="PatternTextBox" Grid.Column="0" HorizontalAlignment="Stretch">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchOccurences}" CommandParameter="{Binding ElementName=PatternTextBox, Path=Text}" />
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="1" Width="18" Height="18" Background="#FFF4F4F4" BorderBrush="{Binding BorderBrush, ElementName=PatternTextBox}" BorderThickness="0,1,1,1" Command="{Binding SearchOccurences}" CommandParameter="{Binding ElementName=PatternTextBox, Path=Text}">
                                <StackPanel>
                                    <Viewbox Width="14" Height="14" Margin="0,0,1,0" Style="{StaticResource InformationViewBox}">
                                        <Path Data="M 19 3 C 13.4883 3 9 7.48828 9 13 C 9 15.3945 9.83984 17.5898 11.25 19.3125 L 3.28125 27.2813 L 4.71875 28.7188 L 12.6875 20.75 C 14.4102 22.1602 16.6055 23 19 23 C 24.5117 23 29 18.5117 29 13 C 29 7.48828 24.5117 3 19 3 Z M 19 5 C 23.4297 5 27 8.57031 27 13 C 27 17.4297 23.4297 21 19 21 C 14.5703 21 11 17.4297 11 13 C 11 8.57031 14.5703 5 19 5 Z" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                    </Viewbox>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Expander>

                <Expander Margin="0,8,0,0" Header="Filters" IsExpanded="False">
                    <StackPanel Margin="10">
                        <TextBlock Text="Obtain object filters from loaded files or clipboard data. In order to get filters from clipboard you must copy the objects from the Object Designer." TextWrapping="Wrap" />
                        <Image Height="86" Margin="0,5,0,0" HorizontalAlignment="Right" Source="pack://application:,,,/Resources/ClipboardTooltip.png" />
                        <StackPanel Margin="0,18,0,0" Orientation="Horizontal">
                            <Button Width="150" HorizontalAlignment="Left" Command="{Binding GetFiltersFromFiles}" Content="Get filters from files" IsEnabled="{Binding Ready}" />
                            <Button Width="150" Margin="8,0,0,0" HorizontalAlignment="Left" Command="{Binding GetFiltersFromClipboard}" Content="Get filters from clipboard" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <TabControl x:Name="OutputTabControl" Grid.Row="1" Grid.Column="1" Margin="0,0,6,4">
            <TabItem Header="Occurrences">
                <ListView Margin="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding SearchResult}" VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="80" DisplayMemberBinding="{Binding Type}">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Tag="Type">Type</GridViewColumnHeader>
                                </GridViewColumn.Header>
                            </GridViewColumn>
                            <GridViewColumn Width="80" DisplayMemberBinding="{Binding ID}">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Tag="ID">ID</GridViewColumnHeader>
                                </GridViewColumn.Header>
                            </GridViewColumn>
                            <GridViewColumn Width="350" DisplayMemberBinding="{Binding ObjectName}">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Tag="Name">Name</GridViewColumnHeader>
                                </GridViewColumn.Header>
                            </GridViewColumn>
                            <GridViewColumn Width="350" DisplayMemberBinding="{Binding Path}">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Tag="Path">File</GridViewColumnHeader>
                                </GridViewColumn.Header>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Filters">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <TextBlock Margin="0,8,0,0" Text="Table filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Table" Text="{Binding FileFilters.Table}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Page filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Page" Text="{Binding FileFilters.Page}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Form filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Form" Text="{Binding FileFilters.Form}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Report filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Report" Text="{Binding FileFilters.Report}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Codeunit filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Codeunit" Text="{Binding FileFilters.Codeunit}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Query filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Query" Text="{Binding FileFilters.Query}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="XMLport filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="XMLport" Text="{Binding FileFilters.XMLport}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="Dataport filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="Dataport" Text="{Binding FileFilters.Dataport}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

                        <TextBlock Margin="0,8,0,0" Text="MenuSuite filter:" />
                        <TextBox Height="80" Margin="0,5,0,0" GotFocus="FilterTextBox_GotFocus" IsReadOnly="True" IsReadOnlyCaretVisible="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" Tag="MenuSuite" Text="{Binding FileFilters.MenuSuite}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Grid.Column="2" Padding="8,0,8,0" HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Command="{Binding ThrowCancellation}" Style="{DynamicResource AppBarButton}" ToolTip="Cancel the running task" Visibility="{Binding CancelableBackgroundActivity, Converter={StaticResource TrueToVisibleConverter}}">
                    <Viewbox Width="16" Height="16" Style="{StaticResource InformationViewBox}">
                        <Path Data="M 7.5 1 C 3.917969 1 1 3.917969 1 7.5 C 1 11.082031 3.917969 14 7.5 14 C 11.082031 14 14 11.082031 14 7.5 C 14 3.917969 11.082031 1 7.5 1 Z M 7.5 2 C 10.542969 2 13 4.457031 13 7.5 C 13 10.542969 10.542969 13 7.5 13 C 4.457031 13 2 10.542969 2 7.5 C 2 4.457031 4.457031 2 7.5 2 Z M 5.5 4.792969 L 4.792969 5.5 L 5.148438 5.851563 L 6.792969 7.5 L 5.148438 9.148438 L 4.792969 9.5 L 5.5 10.207031 L 5.851563 9.851563 L 7.5 8.207031 L 9.148438 9.851563 L 9.5 10.207031 L 10.207031 9.5 L 9.851563 9.148438 L 8.207031 7.5 L 9.851563 5.851563 L 10.207031 5.5 L 9.5 4.792969 L 9.148438 5.148438 L 7.5 6.792969 L 5.851563 5.148438 Z" Fill="White" />
                    </Viewbox>
                </Button>
                <TextBlock Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center" FontStyle="Italic" Foreground="White" Text="{Binding ProgressText}" />
            </StackPanel>

            <Button Grid.Column="1" Padding="4" HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Command="{Binding OpenSettings}" Content="SETTINGS" Foreground="White" Style="{DynamicResource AppBarButton}" />
            <Button Grid.Column="2" HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Click="MenuItem_Click_1" Style="{DynamicResource AppBarButton}">
                <Viewbox Width="16" Height="16" Style="{StaticResource InformationViewBox}">
                    <Path Data="M 7.5 1 C 3.910156 1 1 3.90625 1 7.488281 C 1 10.355469 2.863281 12.789063 5.445313 13.648438 C 5.769531 13.707031 6 13.375 6 13.125 C 6 12.972656 6.003906 12.789063 6 12.25 C 4.191406 12.640625 3.625 11.375 3.625 11.375 C 3.328125 10.625 2.96875 10.410156 2.96875 10.410156 C 2.378906 10.007813 3.011719 10.019531 3.011719 10.019531 C 3.664063 10.0625 4 10.625 4 10.625 C 4.5 11.5 5.628906 11.414063 6 11.25 C 6 10.851563 6.042969 10.5625 6.152344 10.378906 C 4.109375 10.019531 2.996094 8.839844 3 7.207031 C 3.003906 6.242188 3.335938 5.492188 3.875 4.9375 C 3.640625 4.640625 3.480469 3.625 3.960938 3 C 5.167969 3 5.886719 3.871094 5.886719 3.871094 C 5.886719 3.871094 6.453125 3.625 7.496094 3.625 C 8.542969 3.625 9.105469 3.859375 9.105469 3.859375 C 9.105469 3.859375 9.828125 3 11.035156 3 C 11.515625 3.625 11.355469 4.640625 11.167969 4.917969 C 11.683594 5.460938 12 6.210938 12 7.207031 C 12 8.839844 10.890625 10.019531 8.851563 10.375 C 8.980469 10.570313 9 10.84375 9 11.25 C 9 12.117188 9 12.910156 9 13.125 C 9 13.375 9.226563 13.710938 9.558594 13.648438 C 12.140625 12.785156 14 10.355469 14 7.488281 C 14 3.90625 11.089844 1 7.5 1 Z" Fill="White" />
                </Viewbox>
            </Button>
            <ProgressBar Grid.Column="0" Grid.ColumnSpan="3" Height="2" VerticalAlignment="Bottom" Panel.ZIndex="1" Background="Transparent" BorderBrush="Transparent" Foreground="White" Opacity="0.5" Value="{Binding ProgressValue}" />
            <ProgressBar Grid.Column="0" Grid.ColumnSpan="3" Height="2" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Foreground="#FBB614" IsIndeterminate="{Binding BackgroundActivity}" />
        </Grid>
    </Grid>
</Window>
