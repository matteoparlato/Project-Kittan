<Window
    x:Class="Project_Kittan.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Project_Kittan"
    xmlns:converters="clr-namespace:Project_Kittan.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Project_Kittan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Project_Kittan.ViewModels"
    Title="{x:Static app:App.AppName}"
    Width="600"
    Height="400"
    Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
    Owner="{x:Static app:App.CurrentMainWindow}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodel:Settings x:Name="ViewModel" />
    </Window.DataContext>

    <Window.Resources>
        <converters:IntToVisibilityConverter x:Key="ZeroToVisibleConverter" />
        <converters:StringToVisibilityConverter x:Key="EmptyToVisibleConverter" />
    </Window.Resources>

    <Grid>
        <TabControl BorderThickness="0" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Width="100" Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="ItemPresenter" Grid.Column="0" Width="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ContentSource="Header" TextBlock.FontSize="16" TextBlock.FontWeight="SemiBold" TextBlock.Foreground="White" TextBlock.TextAlignment="Center" Typography.Capitals="AllSmallCaps" />
                                    <Polygon x:Name="TrianglePolygon" Grid.Column="1" Margin="0,6,-2,0" VerticalAlignment="Center" Fill="White" Points="16,8 10,4 16,0  " Stroke="White" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemPresenter" Property="TextBlock.Foreground" Value="White" />
                                        <Setter TargetName="TrianglePolygon" Property="Opacity" Value="1" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="ItemPresenter" Property="TextBlock.Foreground" Value="White" />
                                        <Setter TargetName="ItemPresenter" Property="TextBlock.Opacity" Value="0.5" />
                                        <Setter TargetName="TrianglePolygon" Property="Opacity" Value="0" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemPresenter" Property="TextBlock.Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Encoding">
                <Grid>
                    <ScrollViewer Padding="8" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="20" FontWeight="Light" Text="Encoding settings" TextWrapping="Wrap" />
                            <StackPanel Margin="8,8,0,0">
                                <TextBlock FontSize="16" FontWeight="Light" Text="Custom encoding" TextWrapping="Wrap" />
                                <TextBlock Text="Specify below the encoding you want to use when reading and writing files with Project Kittan:" TextWrapping="Wrap" />

                                <RadioButton x:Name="AutomaticEncodingRadioButton" Margin="0,16,0,0" Click="AutomaticEncodingRadioButton_Click" Command="{Binding EncodingSettingsFromCodeCommand}" CommandParameter="" Content="Automatically detect the encoding of the file" GroupName="EncodingType" />
                                <StackPanel x:Name="AutomaticEncodingOptionsStackPanel" Margin="8,5,0,0">
                                    <TextBlock TextWrapping="Wrap" Visibility="{x:Static app:App.IsAPPXVisible}">
                                        <Hyperlink NavigateUri="https://docs.microsoft.com/en-us/dotnet/api/system.text.encoding?view=netframework-4.8#remarks" RequestNavigate="Hyperlink_RequestNavigate">How automatic detection works?</Hyperlink>
                                    </TextBlock>
                                </StackPanel>

                                <RadioButton x:Name="CustomEncodingRadioButton" Margin="0,16,0,0" Click="CustomEncodingRadioButton_Click" Content="Use a custom encoding:" GroupName="EncodingType" />

                                <StackPanel x:Name="CustomEncodingOptionsStackPanel" Margin="8,5,0,0" IsEnabled="False">
                                    <TextBlock Text="Select a custom encoding from the list:" TextWrapping="Wrap" />
                                    <ComboBox x:Name="EncodingsComboBox" Width="150" Margin="0,5,0,0" HorizontalAlignment="Left" ItemsSource="{Binding Encodings}" SelectedIndex="{Binding CustomEncoding}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding EncodingSettingsFromCodeCommand}" CommandParameter="{Binding ElementName=EncodingsComboBox, Path=SelectedItem}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>

                                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Visibility="{x:Static app:App.IsAPPXVisible}">
                                        <Hyperlink NavigateUri="https://docs.microsoft.com/en-us/dotnet/api/system.io.streamreader.currentencoding?view=netframework-4.8" RequestNavigate="Hyperlink_RequestNavigate">Look for encoding codes on .NET Framework Documentation</Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Viewbox HorizontalAlignment="Right" VerticalAlignment="Bottom" Panel.ZIndex="-1" RenderTransformOrigin="0.5,0.5" Style="{StaticResource SettingsViewBox}">
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="15" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Viewbox.RenderTransform>
