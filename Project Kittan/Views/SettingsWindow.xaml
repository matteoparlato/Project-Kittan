                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem Header="Locale">
                <Grid>
                    <ScrollViewer Padding="8" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="20" FontWeight="Light" Text="Locale settings" TextWrapping="Wrap" />
                            <StackPanel Margin="8,8,0,0">
                                <TextBlock FontSize="16" FontWeight="Light" Text="Date format" TextWrapping="Wrap" />
                                <TextBlock Text="Specify below the date format you want to use when updating files with Project Kittan:" TextWrapping="Wrap" />

                                <RadioButton x:Name="SystemLocaleRadioButton" Margin="0,16,0,0" Click="SystemLocaleRadioButton_Click" Content="Use system locale" GroupName="Locale">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding LocaleSettingsCommand}" CommandParameter="" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </RadioButton>
                                <StackPanel x:Name="SystemLocaleOptionsStackPanel" Margin="8,5,0,0">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="Current system locale is:" />
                                        <Span Background="LightYellow" FontStyle="Italic">
                                            <Run Text="{Binding CurrentLocale, Mode=OneWay}" />
                                            <Run Text="{Binding CurrentLocaleDateFormat, Mode=OneWay}" />
                                        </Span>
                                    </TextBlock>
                                </StackPanel>

                                <RadioButton x:Name="CustomLocaleRadioButton" Margin="0,16,0,0" Click="RadioButton_Click" Command="{Binding LocaleSettingsCommand}" CommandParameter="{Binding ElementName=LocalesComboBox, Path=SelectedItem}" Content="Use a custom locale:" GroupName="Locale" />

                                <StackPanel x:Name="CustomLocaleOptionsStackPanel" Margin="8,5,0,0" IsEnabled="False">
                                    <TextBlock Text="Select a custom locale from the list:" TextWrapping="Wrap" />
                                    <ComboBox x:Name="LocalesComboBox" Width="100" Margin="0,5,0,0" HorizontalAlignment="Left" ItemsSource="{Binding Locales}" SelectedIndex="{Binding CustomLocale}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding LocaleSettingsCommand}" CommandParameter="{Binding ElementName=LocalesComboBox, Path=SelectedItem}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>

                                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Visibility="{Binding CustomLocale, Converter={StaticResource ZeroToVisibleConverter}}">
                                        <Run Text="Current custom locale is:" />
                                        <Span Background="LightYellow" FontStyle="Italic">
                                            <Run Text="{Binding CustomLocaleCulture.Name, Mode=OneWay}" />
                                            <Run Text="{Binding CustomLocaleCulture.DateTimeFormat.ShortDatePattern}" />
                                        </Span>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

