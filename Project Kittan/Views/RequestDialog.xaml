<Window
    x:Class="Project_Kittan.Views.RequestDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Project_Kittan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Project_Kittan.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static app:App.AppName}"
    Width="430"
    Height="147"
    Closing="Window_Closing"
    Owner="{x:Static app:App.CurrentMainWindow}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">
            <TextBlock x:Name="CharactersLeftTextBlock" Text="The current version list exceeds the maximum length by 0 characters." TextWrapping="Wrap" />
            <TextBox x:Name="VersionListTextBox" Height="48" MaxHeight="48" Margin="0,4,0,0" KeyDown="TextBox_KeyDown" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" />

            <Grid Margin="0,4,0,0">
                <TextBlock Margin="0,2,0,0" Opacity="0.4" Text="Press CTRL + Z to undo changes" />
                <Button x:Name="ContinueButton" Width="120" HorizontalAlignment="Right" Click="Button_Click" Content="Save and continue" IsEnabled="False" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
