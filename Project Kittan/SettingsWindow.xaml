                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem Header="Reset">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Padding="8" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="20" FontWeight="Light" Text="Reset settings" />
                            <StackPanel Margin="8,8,0,0">
                                <TextBlock FontSize="16" FontWeight="Light" Text="Reset user settings to app default" />
                                <TextBlock Text="If you want to reset Project Kittan settings to default click on reset button. Project Kittan will close to complete the reset procedure." TextWrapping="Wrap" />
                                <Button x:Name="ResetSettingsButton" Width="80" Margin="0,5,0,0" HorizontalAlignment="Left" Click="ResetSettingsButton_Click" Content="Reset" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Viewbox Grid.Row="1" HorizontalAlignment="Right" Panel.ZIndex="-1" RenderTransformOrigin="0.5,0.5" Style="{StaticResource SettingsViewBox}">
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="15" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Viewbox.RenderTransform>
