                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem Header="Shell">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Padding="8" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="20" FontWeight="Light" Text="Shell settings" />
                            <StackPanel Margin="8,8,0,0">
                                <TextBlock FontSize="16" FontWeight="Light" Text="Add &quot;Split this file&quot; to right click context menu" />
                                <TextBlock Text="If you want to split a file in a faster way than dragging and dropping files over Project Kittan you can also add a quick link to the right click context menu." TextWrapping="Wrap" />
                                <StackPanel x:Name="SplitFileOptionsStackPanel" Margin="8,5,0,0" Orientation="Horizontal">
                                    <TextBlock x:Name="EnableSplitShellTextBlock" MouseDown="EnableSplitShellTextBlock_MouseDown" Cursor="Hand" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Text="Enable split file shell integration" TextDecorations="Underline" TextWrapping="Wrap" />
                                    <TextBlock x:Name="DisableSplitShellTextBlock" MouseDown="DisableSplitShellTextBlock_MouseDown" Margin="16,0,0,0" Cursor="Hand" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Text="Disable split file shell integration" TextDecorations="Underline" TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Viewbox Grid.Row="1" HorizontalAlignment="Right" Panel.ZIndex="-1" RenderTransformOrigin="0.5,0.5" Style="{StaticResource SettingsViewBox}">
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="15" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Viewbox.RenderTransform>
