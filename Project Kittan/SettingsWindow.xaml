<Window x:Class="Project_Kittan.SettingsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Project_Kittan" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Project Kittan - Settings" Width="600" Height="400" ResizeMode="NoResize" mc:Ignorable="d">
    <Grid>
        <TabControl BorderThickness="1,0,0,0" TabStripPlacement="Left">
            <TabItem Header="Encoding">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Padding="8" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="20" FontWeight="Light" Text="Encoding settings" />
                            <StackPanel Margin="8,8,0,0">
                                <TextBlock FontSize="16" FontWeight="Light" Text="Custom encoding" />
                                <TextBlock Text="Specify below the encoding you want to use when reading and writing files with Project Kittan:" TextWrapping="Wrap" />

                                <!--  Automatic Encoding  -->
                                <RadioButton x:Name="AutomaticEncodingRadioButton" Margin="0,5,0,0" Click="AutomaticEncodingRadioButton_Click" Content="Automatically detect the encoding of the file" GroupName="EncodingType" />
                                <StackPanel x:Name="AutomaticEncodingOptionsStackPanel" Margin="8,5,0,0">
                                    <TextBlock Cursor="Hand" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" MouseDown="TextBlock_MouseDown_1" Text="How automatic detection works?" TextDecorations="Underline" TextWrapping="Wrap" />
                                </StackPanel>

                                <!--  Manual Encoding  -->
                                <RadioButton x:Name="ManualEncodingRadioButton" Margin="0,16,0,0" Click="ManualEncodingRadioButton_Click" Content="Manually define the encoding to use:" GroupName="EncodingType" />

                                <StackPanel x:Name="ManualEncodingOptionsStackPanel" Margin="8,5,0,0" IsEnabled="False">
                                    <TextBlock Text="By providing a sample file:" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <Button x:Name="BrowseFileEncodingButton" Width="80" Click="BrowseFileEncodingButton_Click" Content="Browse" />
                                        <TextBlock x:Name="BrowseFileEncodingTextBlock" Margin="8,2,0,0" FontStyle="Italic" Text="No file selected" />
                                    </StackPanel>

                                    <TextBlock Margin="0,5,0,0" Text="By specifying the code:" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <TextBox x:Name="UserDefinedEncodingTextBox" Width="160" HorizontalAlignment="Left" TextChanged="UserDefinedEncodingTextBox_TextChanged" />
                                        <TextBlock x:Name="UserDefindedEncodingTextBlock" Margin="8,0,0,0" FontStyle="Italic" Text="Write the code of the encoding" />
                                    </StackPanel>

                                    <TextBlock Margin="0,5,0,0" Cursor="Hand" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" MouseDown="TextBlock_MouseDown" Text="Look for encoding codes on .NET Framework Documentation" TextDecorations="Underline" TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Viewbox Grid.Row="1" HorizontalAlignment="Right" Panel.ZIndex="-1" RenderTransformOrigin="0.5,0.5" Style="{StaticResource SettingsViewBox}">
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="15" />
                                <TranslateTransform />
                            </TransformGroup>
